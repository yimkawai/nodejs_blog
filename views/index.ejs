<div class="author overlay">
    <h1 class="author_heading">Hi, I am KW</h1>
    <p class="author_body">Web developer and designer</p>
</div>
    
<img class="hero-image" src="/img/hero.png" alt="">


    
    <section class="articles">
        <h3 class="articles_heading">Lastest Posts</h3>
    
        <ul class="articles-ul">
            <% data.forEach(post => { %>
                <li>
                    <a href="/post/<%= post._id %>">
                        <span><%= post.title %></span>
                        <span class="article-list_date"><%= post.createdAt.toDateString() %></span>
                    </a>
                </li>
                <% }) %>

            </ul>
            <% if (nextPage !== null) { %> 
                <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
            <% } %>
                   

    </section>